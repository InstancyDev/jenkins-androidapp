<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:orientation="vertical"
    android:padding="2dp">

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/imgLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp">

            <ImageView
                android:id="@+id/imagethumb"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_marginTop="1dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:focusable="false"
                android:scaleType="fitXY"
                android:src="@drawable/cellimage" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fabbtnthumb"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="67dp"
                android:layout_marginTop="60dp"
                android:padding="2dp"
                android:scaleType="fitXY"
                app:fab_size="mini"
                app:borderWidth="0dp"
                app:elevation="6dp"
                app:layout_anchor="@+id/imagethumb"
                app:layout_anchorGravity="right|end|bottom" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgLayout"
            android:background="@android:color/transparent"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="3">

            <RelativeLayout
                android:id="@+id/relattitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.6">

                <TextView
                    android:id="@+id/txt_title_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:focusable="false"
                    android:gravity="center_vertical|fill_horizontal"
                    android:maxLines="2"
                    android:padding="2dp"
                    android:text="Ergonomics "
                    android:textColor="@color/colorBlack"
                    android:textSize="12sp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/txt_coursename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_title_name"
                    android:ellipsize="end"
                    android:focusable="false"
                    android:gravity="left"
                    android:maxLines="1"
                    android:padding="2dp"
                    android:text="e Learning course course"
                    android:textColor="@color/colorGray"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txtShortDesc"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/txt_coursename"
                    android:layout_below="@+id/txt_coursename"
                    android:layout_marginTop="2dp"
                    android:ellipsize="end"
                    android:focusable="false"
                    android:gravity="left"
                    android:maxLines="2"
                    android:padding="2dp"
                    android:text="ssdfgdfgdfgdfgdfgdfgs drgxdfgdfgdf ldkhfsld lf sdf dlfjkasdlifua  fakjhfkauyhfasfakjhfkauyhfasfakjhfkauyhfasfakjhfkauyhfasfakjhfkauyhfasfakjhfkauyhfas  f"
                    android:textColor="@color/colorGray"
                    android:textSize="10sp" />

                <LinearLayout
                    android:id="@+id/content_progress_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/author_site_layout"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <TextView
                        android:id="@+id/txt_course_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:focusable="false"
                        android:gravity="left"
                        android:maxLines="1"
                        android:text=""
                        android:textColor="@color/colorStatusInProgress"
                        android:textSize="8sp" />

                    <ProgressBar
                        android:id="@+id/course_progress_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="140dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center|left"
                        android:focusable="false"
                        android:paddingLeft="5dp"
                        android:progress="40"
                        android:progressTint="@color/colorStatusInProgress" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/author_site_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtShortDesc"
                    android:orientation="horizontal"
                    android:padding="1dp">

                    <TextView
                        android:id="@+id/txt_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:focusable="false"
                        android:gravity="left"
                        android:maxLines="1"
                        android:padding="2dp"
                        android:text="By Upendra "
                        android:textColor="@color/colorGray"
                        android:textSize="8sp" />

                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".4"
                android:padding="4dp">

                <ImageButton
                    android:id="@+id/btn_contextmenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_more_vert_black_24dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true">

                    <com.dinuscxj.progressbar.CircleProgressBar
                        android:id="@+id/circle_progress_track"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:visibility="gone"
                        app:progress_end_color="@color/colorStatusCompleted"
                        app:progress_stroke_width="2dp"
                        app:progress_text_size="10dp"
                        app:style="solid_line" />

                    <TextView
                        android:id="@+id/btntxt_download"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:background="@android:color/transparent"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="@string/fa_icon_cloud_download"
                        android:textColor="@color/text_color"
                        android:textSize="20sp" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>