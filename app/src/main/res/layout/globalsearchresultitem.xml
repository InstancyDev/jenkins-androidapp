<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/cellview"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="2dp">

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imagethumb"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:focusable="false"
            android:scaleType="fitCenter"
             />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imagethumb"
            android:background="@android:color/transparent"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="3">

            <RelativeLayout
                android:id="@+id/relattitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.6">

                <TextView
                    android:id="@+id/txt_title_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:focusable="false"
                    android:gravity="center_vertical|fill_horizontal"
                    android:maxLines="2"
                    android:padding="2dp"
                    android:text="Ergonomics "
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    android:typeface="sans" />

                <LinearLayout
                    android:id="@+id/course_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_title_name"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_coursename"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txt_title_name"
                        android:ellipsize="end"
                        android:focusable="false"
                        android:gravity="left"
                        android:maxLines="1"
                        android:padding="2dp"
                        android:text="e Learning course course"
                        android:textColor="@color/colorGray"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/txt_lineatcoursename"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:focusable="false"
                        android:maxLines="1"
                        android:padding="2dp"
                        android:text=""
                        android:background="@color/colorGray"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/txt_avaliableseats"
                        android:layout_width="wrap_content"
                        android:layout_height="17dp"
                        android:ellipsize="end"
                        android:focusable="false"
                        android:gravity="left"
                        android:maxLines="1"
                        android:padding="2dp"
                        android:text="Avaliable seats:197"
                        android:textColor="@color/colorGray"
                        android:textSize="10sp" />


                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/rating_layout"
                    android:layout_below="@+id/course_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:padding="2dp">

                    <RatingBar
                        android:id="@+id/rat_adapt_ratingbar"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorStatusInProgress"
                        android:isIndicator="true"
                        android:rating="0"
                        />
                </RelativeLayout>

                <TextView
                    android:id="@+id/txtShortDesc"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/rating_layout"
                    android:layout_below="@+id/rating_layout"
                    android:layout_marginTop="2dp"
                    android:ellipsize="end"
                    android:focusable="false"
                    android:gravity="left"
                    android:maxLines="2"
                    android:padding="2dp"
                    android:text="ssdfgdfgdfgdfgdfgdfgs drgxdfgdfgdf ldkhfsld lf sdf dlfjkasdlifua  fakjhfkauyhfasfakjhfkauyhfasfakjhfkauyhfasfakjhfkauyhfasfakjhfkauyhfasfakjhfkauyhfas  f"
                    android:textColor="@color/colorGray"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txtLongDesc"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/txtShortDesc"
                    android:layout_below="@+id/txtShortDesc"
                    android:layout_marginTop="2dp"
                    android:ellipsize="end"
                    android:focusable="false"
                    android:gravity="left"
                    android:maxLines="2"
                    android:padding="2dp"
                    android:text="ssdfgdfgdfgdfgdfgdfgs drgxdfgdfgdf ldkhfsld lf sdf dlfjkasdlifua  fakjhfkauyhfasfakjhfkauyhfasfakjhfkauyhfasfakjhfkauyhfasfakjhfkauyhfasfakjhfkauyhfas  f"
                    android:textColor="@color/colorGray"
                    android:textSize="12sp" />

                <LinearLayout
                    android:id="@+id/author_site_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtLongDesc"
                    android:orientation="horizontal"
                    android:padding="1dp">

                    <TextView
                        android:id="@+id/txt_author"
                        android:layout_width="wrap_content"
                        android:layout_height="17dp"
                        android:ellipsize="end"
                        android:focusable="false"
                        android:gravity="left"
                        android:maxLines="1"
                        android:padding="2dp"
                        android:text="By Upendra "
                        android:textColor="@color/colorGray"
                        android:textSize="10sp" />
                    <TextView
                        android:id="@+id/txt_linesitename"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:focusable="false"
                        android:maxLines="1"
                        android:padding="2dp"
                        android:text=""
                        android:background="@color/colorGray"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/txt_sitename"
                        android:layout_width="wrap_content"
                        android:layout_height="17dp"
                        android:ellipsize="end"
                        android:focusable="false"
                        android:gravity="left"
                        android:maxLines="1"
                        android:padding="2dp"
                        android:text="switch"
                        android:textColor="@color/colorStatusOther"
                        android:textSize="10sp" />

                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".4"
                android:padding="4dp">

                <ImageButton
                    android:id="@+id/btn_contextmenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_more_vert_black_24dp" />

            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/footortxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGray"
        android:padding="4dp"
        android:text="See All"
        android:textAlignment="center"
        android:textSize="16sp" />


</LinearLayout>