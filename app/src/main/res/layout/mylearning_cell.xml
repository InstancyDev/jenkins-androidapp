<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_marginTop="3dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp">

        <TextView
            android:id="@+id/txtgroupName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorGray"
            android:ellipsize="end"
            android:gravity="center_vertical|fill_horizontal"
            android:maxLines="2"
            android:padding="2dp"
            android:text="Peter"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <RelativeLayout
            android:id="@+id/imgLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtgroupName"
            android:padding="6dp">

            <ImageView
                android:id="@+id/imagethumb"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:padding="2dp"
                android:src="@drawable/cellimage" />

            <TextView
                android:id="@+id/lbRequired"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:background="@color/colorRed"
                android:ellipsize="end"
                android:maxLines="2"
                android:padding="2dp"
                android:text="Required"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                android:typeface="sans" />


            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fabbtnthumb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="39dp"
                android:layout_marginTop="175dp"
                android:padding="2dp"
                android:scaleType="fitXY"
                app:borderWidth="0dp"
                app:elevation="6dp"
                app:layout_anchor="@+id/imagethumb"
                app:layout_anchorGravity="right|end|bottom" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgLayout"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="3">

            <RelativeLayout
                android:id="@+id/relattitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.7">

                <TextView
                    android:id="@+id/txt_title_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center_vertical|fill_horizontal"
                    android:maxLines="2"
                    android:padding="2dp"
                    android:text="Ergonomics in Office "
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp"
                    android:typeface="sans" />


                <LinearLayout
                    android:id="@+id/rating_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_title_name"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_coursename"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="left"
                        android:maxLines="1"
                        android:padding="2dp"
                        android:text="e Learning course course"
                        android:textColor="@color/colorGray"
                        android:textSize="14sp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:padding="2dp">

                        <RatingBar
                            android:id="@+id/rat_adapt_ratingbar"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/colorStatusInProgress"
                            android:isIndicator="false"
                            android:rating="3.5"
                            android:stepSize="0.5"
                            android:visibility="gone" />
                    </RelativeLayout>


                </LinearLayout>

                <TextView
                    android:id="@+id/txtShortDesc"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/rating_layout"
                    android:layout_below="@+id/rating_layout"
                    android:layout_marginTop="2dp"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:maxLines="2"
                    android:padding="2dp"
                    android:text="ssdfgdfgdfgdfgdfgdfgs drgxdfgdfgdf ldkhfsld lf sdf dlfjkasdlifua  fakjhfkauyhfasfakjhfkauyhfasfakjhfkauyhfasfakjhfkauyhfasfakjhfkauyhfasfakjhfkauyhfas  f"
                    android:textColor="@color/colorGray"
                    android:textSize="14sp" />


                <LinearLayout
                    android:id="@+id/eventlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtShortDesc"
                    android:orientation="vertical"
                    android:padding="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:padding="1dp">

                        <TextView
                            android:id="@+id/txteventicon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="left"
                            android:maxLines="1"
                            android:padding="1dp"
                            android:text="@string/fa_icon_clock_o"
                            android:textColor="@color/colorDarkGrey"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/txt_eventfromtotime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:maxLines="2"
                            android:padding="3dp"
                            android:paddingLeft="6dp"
                            android:text="08/21/2018 16:01:01 to 08/23/2018 11:01:01"
                            android:textColor="@color/colorGray"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_timezone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:maxLines="1"
                        android:padding="3dp"
                        android:paddingStart="18dp"
                        android:text="Eastern standard time"
                        android:textColor="@color/colorGray"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:id="@+id/locationlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="1dp">

                        <TextView
                            android:id="@+id/txtlocationicon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="left"
                            android:maxLines="1"
                            android:padding="1dp"
                            android:text="@string/fa_icon_map_marker"
                            android:textColor="@color/colorDarkGrey"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/txt_eventlocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:maxLines="2"
                            android:padding="3dp"
                            android:paddingLeft="6dp"
                            android:text="Houstan, city of houstan,bagby houstan,TX"
                            android:textColor="@color/colorGray"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/content_progress_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/creditsLayout"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <TextView
                        android:id="@+id/txt_course_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="left"
                        android:maxLines="1"
                        android:text="In Progress 25%"
                        android:textColor="@color/colorStatusInProgress"
                        android:textSize="14sp" />

                    <ProgressBar
                        android:id="@+id/course_progress_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="140dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center|left"
                        android:paddingLeft="5dp"
                        android:progress="40"
                        android:progressTint="@color/colorStatusInProgress" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/author_site_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/eventlayout"
                    android:orientation="horizontal"
                    android:padding="1dp">

                    <TextView
                        android:id="@+id/txtathricon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="left"
                        android:maxLines="1"
                        android:padding="1dp"
                        android:text="@string/fa_icon_user"
                        android:textColor="@color/colorDarkGrey"
                        android:textSize="16sp" />


                    <TextView
                        android:id="@+id/txt_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="left"
                        android:maxLines="2"
                        android:padding="1dp"
                        android:text="By   "
                        android:textColor="@color/colorGray"
                        android:textSize="14sp" />

                    <View
                        android:id="@+id/consolidateline"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@color/colorGray"
                        android:padding="5dp"></View>

                    <TextView
                        android:id="@+id/txt_site_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:maxLines="2"
                        android:padding="3dp"
                        android:paddingLeft="6dp"
                        android:text="Playground"
                        android:textColor="@color/colorSiteName"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/creditsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/author_site_layout"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtCredits"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="left"
                        android:maxLines="1"
                        android:padding="1dp"
                        android:textColor="@color/colorDarkGrey"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/lbCredits"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:maxLines="2"
                        android:padding="3dp"
                        android:paddingLeft="6dp"
                        android:text=""
                        android:textSize="14sp" />

                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:padding="4dp">

                <ImageButton
                    android:id="@+id/btn_contextmenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_more_vert_black_24dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true">

                    <com.dinuscxj.progressbar.CircleProgressBar
                        android:id="@+id/circle_progress"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:progress_end_color="@color/colorStatusCompleted"
                        app:progress_stroke_width="2dp"
                        app:progress_text_size="10dp"
                        app:style="solid_line" />

                    <TextView
                        android:id="@+id/btntxt_download"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:background="@android:color/transparent"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="@string/fa_icon_cloud_download"
                        android:textColor="@color/text_color"
                        android:textSize="24sp" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/txtEnrollShedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/contentLayout"
            android:layout_marginStart="6dp"
            android:ellipsize="end"
            android:gravity="end"
            android:maxLines="1"
            android:padding="5dp"
            android:text="@string/btn_txt_enroll"
            android:textColor="@color/colorGray"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="visible" />


        <TextView
            android:id="@+id/txtWriteReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/contentLayout"
            android:ellipsize="end"
            android:gravity="end"
            android:maxLines="1"
            android:padding="5dp"
            android:text="Review"
            android:textColor="@color/colorGray"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="gone" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
