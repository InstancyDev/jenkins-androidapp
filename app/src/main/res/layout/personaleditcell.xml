<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <RelativeLayout
        android:id="@+id/labelastrek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/astrekd"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_alignParentTop="true"
            android:text="*"
            android:textColor="@color/colorRed"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/labelField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/astrekd"
            android:gravity="center_vertical"
            android:text="Description:" />

    </RelativeLayout>

    <EditText
        android:id="@+id/editField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labelastrek"
        android:padding="10dp"
        android:visibility="visible"
        android:text="edit field" />

    <TextView
        android:id="@+id/txtdobclick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editField"
        android:background="@drawable/bottomline"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="DOB"
        android:textColor="@color/colorBlack"
        android:textSize="16dp" />

    <Spinner
        android:layout_below="@+id/txtdobclick"
        android:id="@+id/spnrCountries"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/bottomline"
        android:padding="10dp"></Spinner>


</RelativeLayout>