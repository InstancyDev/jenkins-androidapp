        <!--android:id="@+id/report_btn_txt"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="44dp"-->

        <!--android:layout_centerVertical="true"-->
        <!--android:layout_toRightOf="@id/report_fa_icon"-->
