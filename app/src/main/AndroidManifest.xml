            </intent-filter>
        </service>

        <!-- INAPP BILLING ACTIVITY -->

        <activity
            android:name=".inappbilling.InAppBilling_Activity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Translucent"></activity>

