            android:name=".wifisharing.WiFiClientIPTransferService"
            android:enabled="true" />


        <receiver
            android:name=".helper.NetworkChangeReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

